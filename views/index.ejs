									showConfirmButton : false ,
									background : '#ee5f5b'
								
								});
		} else{

		
		$.ajax({
			type: "POST",
			data: JSON.stringify({
				username: username,
				email: email,
				password: password,
				tokenId: token
			}),
			contentType: "application/json",
			dataType: "json",
			url: "/api/signIn",
