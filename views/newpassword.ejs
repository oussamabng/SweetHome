document.getElementById("r").addEventListener("click",function(){
	$.ajax({
		type: "POST",
		data: JSON.stringify({
			newPassword : document.getElementById("newPassword").value,
			verifyPassword :  document.getElementById("newCPassword").value,
			token : document.location.search.substring(7)
		}),
		contentType: "application/json",
		dataType: "json",
		url: "/reset",
		success: function(data) {
			Swal.fire(
