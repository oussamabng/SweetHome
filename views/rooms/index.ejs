</head>
<body>

  

  <section class="regular slider" id="test">
      
    
      
  </section>

 

  

  <script src="https://code.jquery.com/jquery-2.2.0.min.js" type="text/javascript"></script>
  <script src="./slick/slick.js" type="text/javascript" charset="utf-8"></script>
  <script>
    var kitchen={name:"couzina", type:"kitchen", dht:"skhana",rgb:{exists:false}};
          var chambrti={name:"chambrti",type:"bedroom", rgb:{exists:true,light:false, color:"hh"}};
          var sallon={name:"sallon",type:"livingroom", dht:"brd",rgb:{exists:false}};
          var couloire={name:"couloire",type:"hallway", dht:"brd",rgb:{exists:false}};
        var rooms=[kitchen, chambrti,sallon,sallon,couloire];

    function showRooms() {
          
        
            for (i = 0; i < rooms.length; i++){
                document.getElementById('test').innerHTML+=
                
                '<div class="card">'+
                    '<section class="container-name" id="type'+i+'" >'+
                     
                    '</section>'+
                    '<section class="container-rgb" id="rgb'+i+'">'+
                   
                    '</section>'+
                    '<section class="container-charts">'+
                    "<h2>"+rooms[i].name+"</h2>"+
                     '<p>'+rooms[i].type+'</p> '+
                    '</section>'+
                    '<section class="container-secure">'+
                    "<h2>"+rooms[i].name+"</h2>"+
                     '<p>'+rooms[i].type+'</p> '+
                    '</section>'+
                    '<section class="container-gaz">'+
                    "<h2>"+rooms[i].name+"</h2>"+
                     '<p>'+rooms[i].type+'</p> '+
                    '</section>'+
                '</div>'
                ;
                
                
            }
      }
      function addType(){
        for (i = 0; i < rooms.length; i++){
          if(rooms[i].type=="kitchen"){
          document.getElementById('type'+i).innerHTML+='<img src="icons/hat.png" style="width:50px;margin-left:160px;margin-top:10px;">';
          document.getElementById('type'+i).innerHTML+="<p>"+rooms[i].name+"</p>";        
        }
        if(rooms[i].type=="bedroom"){
          document.getElementById('type'+i).innerHTML+='<img src="icons/bedroom.png" style="width:50px;margin-left:160px;margin-top:10px;">';
          document.getElementById('type'+i).innerHTML+="<p>"+rooms[i].name+"</p>";        
        }
        if(rooms[i].type=="livingroom"){
          document.getElementById('type'+i).innerHTML+='<img src="icons/livingroom.png" style="width:50px;margin-left:160px;margin-top:10px;">';
          document.getElementById('type'+i).innerHTML+="<p>"+rooms[i].name+"</p>";        
        }
        if(rooms[i].type=="office"){
          document.getElementById('type'+i).innerHTML+='<img src="icons/office.png" style="width:50px;margin-left:160px;margin-top:10px;">';
          document.getElementById('type'+i).innerHTML+="<p>"+rooms[i].name+"</p>";        
        }
        if(rooms[i].type=="hallway"){
          document.getElementById('type'+i).innerHTML+='<img src="icons/hallway.png" style="width:50px;margin-left:160px;margin-top:10px;">';
          document.getElementById('type'+i).innerHTML+="<p>"+rooms[i].name+"</p>";        
        }
          
      }}
      function addRGB(){
        for (i = 0; i < rooms.length; i++){
          if(rooms[i].rgb.exists==true){
          if(rooms[i].rgb.light==true){
          document.getElementById('rgb'+i).innerHTML+='<img src="icons/on.png" style="width:10%;margin-left:20px;margin-top:10px;" class="rgbview">';}
          if(rooms[i].rgb.light==false){
          document.getElementById('rgb'+i).innerHTML+='<img src="icons/off.png" style="width:10%;margin-left:20px;margin-top:10px;" class"rgbview">';
        
      }
      document.getElementById('rgb'+i).innerHTML+=  '<input type="range" min="1" max="100" value="50" class="renge blue rgbview" >';

    }}}
    
      
    </script>
    <script>
    $(document).on('ready', function() {
      showRooms();
      addType(); 
      addRGB();   
    })
